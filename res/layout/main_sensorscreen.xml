<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/mapscreencompass">
        <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
        android:layout_marginTop="-10dp"
        >
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
                <ImageView
                android:id="@+id/imageView_help"
                android:scaleType="fitEnd"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/android_button_33_2"/>
                <TextView
                android:id="@+id/textview_help"
                android:background="@null"
                android:scaleType="fitEnd"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:textSize="35sp"
                android:textColor="#000000"
                android:text="Sensors"/>
            </LinearLayout>
        </HorizontalScrollView>
             <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
                <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip"
                android:layout_marginTop="7dp">   
                    <ImageView
                    android:id="@+id/route_image3"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/clock"/>
                    <TextView
                    android:id="@+id/route_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/route_image3"
                    android:layout_toRightOf="@+id/route_image3"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="Light"/>
                    <TextView
                    android:id="@+id/sensor_light"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/route_title3"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:text="Sunny"
                    android:layout_toRightOf="@+id/route_image3"/>
                    </RelativeLayout>
                    <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:layout_marginTop="7dp">   
                    <ImageView
                    android:id="@+id/route_image3"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ruler"/>
                    <TextView
                    android:id="@+id/route_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/route_image3"
                    android:layout_toRightOf="@+id/route_image3"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="Gravity"/>
                    <TextView
                    android:id="@+id/sensor_gravity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/route_title3"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:text="12.5 Km"
                    android:layout_toRightOf="@+id/route_image3"/>
                    </RelativeLayout>
                   
        </LinearLayout>    
</LinearLayout>
