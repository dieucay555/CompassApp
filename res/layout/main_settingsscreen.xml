<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/mapscreencompass">
    <HorizontalScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarSize="0dp"
    android:layout_marginTop="-10dp">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
            
            <ImageView
            android:id="@+id/imageView1"
            android:scaleType="fitEnd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/android_button_22_2"/>
            
            <TextView
            android:id="@+id/imageButton5"
            android:background="@null"
            android:scaleType="fitEnd"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:textSize="35sp"
            android:textColor="#000000"
            android:text="Settings"/>
        </LinearLayout>
    </HorizontalScrollView>

    
        <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="95dp"
        >
            
            <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


                <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                    
                    <CheckedTextView
                     android:id="@+id/checboxi"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textSize="20sp"
                     android:textColor="#000000"
                     android:text="Set Location: "
                     android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                     android:clickable="true"
                     android:focusable="true"
                     android:padding="3dp"
                     android:layout_marginLeft="10dp"
                     />
                    
                    
                     <TextView
                                android:id="@+id/textview_findroute"
                                android:background="@null"
                                android:textSize="30sp"
                                android:textColor="#000000"
                                android:text="Find Route:"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="10dp"
                                
                                android:padding="3dp"
                                />
                    
                    <TextView
                                android:id="@+id/textview_routeauth"
                                android:background="@null"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:text="Find by Author:"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="0dp"
                                android:layout_marginLeft="10dp"
                                android:padding="3dp"
                                />
                                <EditText
                                android:id="@+id/edittext_routeauth"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="3dp"
                                android:background="@drawable/edit_text"
                                />
                                 <TextView
                                android:id="@+id/textview_routekeywords"
                                android:background="@null"
                                android:textSize="20sp"
                                android:textColor="#000000"
                                android:text="Find by Keywords:"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="10dp"
                                android:padding="3dp"
                                />
                                
                                <EditText
                                android:id="@+id/edittext_routekeywords"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="3dp"
                                android:background="@drawable/edit_text"
                                />
                               

                                <ImageButton
                                android:id="@+id/submit_button"
                                android:background="@null"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitEnd"
                                android:padding="3dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="left"
                                android:src="@drawable/android_button_search_normal"
                                />
                </LinearLayout>
                <ListView
                    android:id="@+id/listview_addfriends"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:cacheColorHint="#00000000"
                    android:layout_marginTop="10dp">
                </ListView>
            </LinearLayout>
        </ScrollView>

</LinearLayout>

